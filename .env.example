# Ahab GUI Configuration
# Copy this file to .env and update with your values

# REQUIRED: Flask secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-here-at-least-32-characters-long

# Path to Ahab directory (relative or absolute)
AHAB_PATH=../ahab

# Server configuration
WUI_HOST=127.0.0.1
WUI_PORT=5000

# Environment (development or production)
FLASK_ENV=development

# Rate limiting (requests per minute)
RATE_LIMIT=10

# Command execution timeout (seconds)
COMMAND_TIMEOUT=300
